


<div class="container">
<h1>Products</h1>

<%= link_to "New product", new_product_path, class: "btn btn-primary" %>
<div id="products" class="mt-2">
  <table class="table table-borderd table-hover">
    <thead class="table-dark">
      <tr>
        <th>
          Title
        </th>
        <th>
          Description
        </th>
        <th>
          Image
        </th>
        <th>
          Price
        </th>
        <th>
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.description %></td>
          <td>
            <%if product.image.present? %>
              <img class="card-img-top" src="<%= url_for(product.image) %>" alt="Card image cap" style="height:50px;width:50px">
            <% end %>
          </td>
          <td><%= product.price %></td>
          <td>
            <%= link_to "Show", product, class: "btn btn-success" %>
            <%= link_to "Edit", edit_product_path(product), class: "btn btn-info" %>
            <%= link_to "Destroy", product, data: { turbo_method: :delete, turbo_confirm: 'Are you sure want to delete?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>

</div>